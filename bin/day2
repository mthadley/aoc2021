#!/usr/bin/env ruby
require_relative "../environment"

part1 answer: 1714680 do
  run Submarine
end

part2 answer: 1963088820 do
  run AimedSubmarine
end

def run(sub_klass)
  input.
    lines.
    map { Command.parse(_1) }.
    each_with_object(sub_klass.new) { |cmd, sub| sub.process(cmd) }.
    answer
end

class Submarine
  def initialize
    @horizontal = 0
    @depth = 0
  end

  def process(command)
    case command.type
    when :forward then @horizontal += command.value
    when :up      then @depth -= command.value
    when :down    then @depth += command.value
    end
  end

  def answer = @horizontal * @depth
end

class AimedSubmarine < Submarine
  def initialize
    super
    @aim = 0
  end

  def process(command)
    case command.type
    when :forward
      @horizontal += command.value
      @depth += @aim * command.value
    when :up   then @aim -= command.value
    when :down then @aim += command.value
    end
  end
end

Command = Struct.new(:type, :value) do
  def self.parse(line)
    /(?<type>\w+)\s+(?<value>\d+)/ =~ line or
      raise TypeError, "Bad input: #{line}"

    new(type.to_sym, value.to_i)
  end
end

__END__
